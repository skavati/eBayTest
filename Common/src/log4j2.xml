<Configuration status="DEBUG">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] 
      %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} - %msg%n" />
		</Console>
		<!-- File Appender -->
		<!-- <File name="File" fileName="target/log/MBankWeb.log"> <PatternLayout 
			pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %LOGGER{36} - %msg%n" /> 
			</File> -->
		<File name="File" fileName="target/log/MBankWeb.log"
			immediateFlush="true" append="false">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %LOGGER{36} - %msg%n" />
		</File>
	</Appenders>

	<Loggers>
		<!-- <Root level="info"> <AppenderRef ref="Console" /> <AppenderRef ref="File" 
			/> </Root> -->
		<Root level="info">
			<AppenderRef ref="Console" level="info" />
			<AppenderRef ref="File" level="info" />
		</Root>
	</Loggers>
</Configuration>